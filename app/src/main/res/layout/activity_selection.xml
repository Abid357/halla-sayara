<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carbg"
    android:orientation="vertical"
    tools:context=".activity.SelectionActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="50sp" />

    <Button
        android:id="@+id/login_selection_button"
        android:layout_width="135sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginBottom="30sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_btn_red"
        android:text="@string/login_btn"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button

        android:id="@+id/signup_selection_button"
        android:layout_width="135sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="25sp"
        android:layout_marginBottom="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_btn_red"
        android:text="@string/sign_up_btn"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

</RelativeLayout>