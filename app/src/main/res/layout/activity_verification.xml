<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerificationActivity">

    <TextView
        android:id="@+id/almost_there_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50sp"
        android:text="Almost there..."
        android:textAlignment="center"
        android:textSize="35sp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorRed"
        android:layout_below="@id/almost_there_text_view">

        <EditText
            android:id="@+id/email_verification_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email Verification Code"
            android:imeOptions="actionDone"
            android:inputType="textImeMultiLine|number"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorRed"
        android:layout_below="@id/email_text_input_layout">

        <EditText
            android:id="@+id/phone_verification_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone Verification Code"
            android:imeOptions="actionDone"
            android:inputType="textImeMultiLine|number"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text_input_layout"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@drawable/rounded_btn_red"
        android:textColor="@color/colorAccent"
        android:text="Verify">

    </Button>

</RelativeLayout>